---
global:
  scrape_interval: 15s
  evaluation_interval: 15s
  scrape_timeout: 10s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'pihole'
    static_configs:
      - targets: [{{ ansible_host }}:9617]

  - job_name: 'speedtest'
    scrape_interval: 65s
    scrape_timeout: 60s
    static_configs:
      - targets: ['speedtest:9798']
